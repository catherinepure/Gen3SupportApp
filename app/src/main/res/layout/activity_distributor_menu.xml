<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="?android:attr/colorBackground">

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, Distributor"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="48dp" />

    <!-- Scan for Scooter Button (PRIMARY ACTION) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnScanScooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ” Scan for Scooter"
        android:textSize="18sp"
        android:padding="20dp"
        android:layout_marginBottom="24dp"
        app:cornerRadius="12dp"
        style="@style/Widget.MaterialComponents.Button" />

    <!-- Search Database Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSearchDatabase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ‘¥ Manage Users"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        app:cornerRadius="8dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <!-- View Inventory Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnViewInventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“‹ View Inventory"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="32dp"
        app:cornerRadius="8dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <!-- Spacer to push logout to bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Logout Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="16sp"
        android:padding="16dp"
        app:icon="@android:drawable/ic_lock_power_off"
        app:iconGravity="start"
        style="@style/Widget.MaterialComponents.Button.TextButton" />

</LinearLayout>
