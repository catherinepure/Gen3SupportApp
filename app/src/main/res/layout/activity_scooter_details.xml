<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/colorBackground">

    <!-- Scooter Serial -->
    <TextView
        android:id="@+id/tvScooterSerial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scooter: ZYD12345"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="8dp" />

    <!-- Customer Info -->
    <TextView
        android:id="@+id/tvCustomerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer: Loading..."
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginBottom="4dp" />

    <!-- Current Firmware -->
    <TextView
        android:id="@+id/tvCurrentFirmware"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Firmware: Loading..."
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginBottom="8dp" />

    <!-- Current Telemetry (shown when connected) -->
    <TextView
        android:id="@+id/tvCurrentTelemetry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CURRENT TELEMETRY:\n..."
        android:textSize="12sp"
        android:fontFamily="monospace"
        android:textColor="?android:attr/textColorSecondary"
        android:background="#F0F0F0"
        android:padding="12dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <!-- Firmware Section -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCheckForUpdates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check for Updates"
        android:textSize="14sp"
        android:padding="12dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        style="@style/Widget.MaterialComponents.Button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUpdateFirmware"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Firmware"
        android:textSize="14sp"
        android:padding="12dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        style="@style/Widget.MaterialComponents.Button" />

    <TextView
        android:id="@+id/tvFirmwareStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <!-- Disconnect Button (shown when BLE connected) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDisconnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disconnect Scooter"
        android:textSize="14sp"
        android:padding="12dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        style="@style/Widget.Material3.Button.TonalButton" />

    <!-- View Customer Button (shown when registered) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnViewCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ‘¤ View Customer Details"
        android:textSize="14sp"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        style="@style/Widget.MaterialComponents.Button" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/dividerHorizontal"
        android:layout_marginBottom="16dp" />

    <!-- History Status -->
    <TextView
        android:id="@+id/tvHistoryStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update History:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="8dp" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <!-- History List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Close Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

</LinearLayout>
