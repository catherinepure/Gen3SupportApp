<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/background">

    <!-- IDLE State -->
    <LinearLayout
        android:id="@+id/layoutIdle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_bluetooth_scan"
            android:contentDescription="Bluetooth scan icon"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan for Nearby Scooter"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make sure the scooter is powered on and within Bluetooth range"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="40dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnScan"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Start Scanning"
            android:textSize="16sp"
            app:icon="@drawable/ic_bluetooth_scan"
            app:iconGravity="start"
            app:iconSize="20dp"
            app:cornerRadius="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Cancel"
            android:textSize="14sp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="12dp"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

    <!-- SCANNING State -->
    <LinearLayout
        android:id="@+id/layoutScanning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scanning for nearby scooters..."
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This may take a few seconds"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"/>
    </LinearLayout>

    <!-- CONNECTING State -->
    <LinearLayout
        android:id="@+id/layoutConnecting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connecting to scooter..."
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reading firmware version and telemetry data"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>
