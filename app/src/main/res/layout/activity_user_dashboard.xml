<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dashboard_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ============ HEADER ============ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Status dot -->
            <View
                android:id="@+id/statusDot"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/circle_red" />

            <TextView
                android:id="@+id/tvConnectionStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Disconnected"
                android:textColor="@color/dashboard_text_secondary"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_settings"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Settings"
                app:tint="@color/dashboard_text_secondary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="@color/dashboard_text_secondary"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- ============ DISCONNECTED STATE ============ -->
        <LinearLayout
            android:id="@+id/layoutDisconnected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="80dp"
            android:paddingBottom="80dp"
            android:visibility="visible">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_brand_p"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect to your scooter"
                android:textColor="@color/dashboard_text_primary"
                android:textSize="20sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan for nearby scooters to view live data and control your ride"
                android:textColor="@color/dashboard_text_secondary"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingHorizontal="32dp"
                android:layout_marginBottom="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan &amp; Connect"
                android:textSize="16sp"
                android:paddingHorizontal="32dp"
                app:cornerRadius="24dp" />
        </LinearLayout>

        <!-- ============ CONNECTING STATE ============ -->
        <LinearLayout
            android:id="@+id/layoutConnecting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="100dp"
            android:paddingBottom="100dp"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:indeterminateTint="@color/dashboard_accent" />

            <TextView
                android:id="@+id/tvConnectingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scanning for scooters..."
                android:textColor="@color/dashboard_text_primary"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- ============ CONNECTED STATE ============ -->
        <LinearLayout
            android:id="@+id/layoutConnected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Speed + Battery Gauges Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <com.pure.gen3firmwareupdater.views.SpeedGaugeView
                    android:id="@+id/speedGauge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.pure.gen3firmwareupdater.views.BatteryGaugeView
                    android:id="@+id/batteryGauge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- Odometer / Range Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/dashboard_card_bg"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/dashboard_card_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Odometer -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ODOMETER"
                            android:textColor="@color/dashboard_text_secondary"
                            android:textSize="11sp"
                            android:letterSpacing="0.1" />

                        <TextView
                            android:id="@+id/tvOdometer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 km"
                            android:textColor="@color/dashboard_text_primary"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/dashboard_card_stroke"
                        android:layout_marginVertical="4dp" />

                    <!-- Range -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RANGE"
                            android:textColor="@color/dashboard_text_secondary"
                            android:textSize="11sp"
                            android:letterSpacing="0.1" />

                        <TextView
                            android:id="@+id/tvRange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 km"
                            android:textColor="@color/dashboard_text_primary"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Controls Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/dashboard_card_bg"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/dashboard_card_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONTROLS"
                        android:textColor="@color/dashboard_text_secondary"
                        android:textSize="11sp"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="12dp" />

                    <!-- Headlight Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_headlight"
                            app:tint="@color/dashboard_text_secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Headlight"
                            android:textColor="@color/dashboard_text_primary"
                            android:textSize="16sp" />

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchHeadlight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dashboard_card_stroke"
                        android:layout_marginStart="36dp" />

                    <!-- Cruise Control Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_cruise_control"
                            app:tint="@color/dashboard_text_secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Cruise Control"
                            android:textColor="@color/dashboard_text_primary"
                            android:textSize="16sp" />

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchCruise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dashboard_card_stroke"
                        android:layout_marginStart="36dp" />

                    <!-- Lock Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_lock_scooter"
                            app:tint="@color/dashboard_text_secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Lock Scooter"
                            android:textColor="@color/dashboard_text_primary"
                            android:textSize="16sp" />

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchLock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ============ RIDE RECORDING CARD ============ -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRecording"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/dashboard_card_bg"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/dashboard_card_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Idle state -->
                    <LinearLayout
                        android:id="@+id/layoutRecordIdle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvRecordTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DIAGNOSTIC RECORDING"
                                android:textColor="@color/dashboard_text_secondary"
                                android:textSize="11sp"
                                android:letterSpacing="0.1" />

                            <TextView
                                android:id="@+id/tvRecordSubtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tap Go to start recording"
                                android:textColor="@color/dashboard_text_secondary"
                                android:textSize="13sp"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnRecordGo"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Go"
                            android:textSize="14sp"
                            android:paddingHorizontal="24dp"
                            app:backgroundTint="#4CAF50"
                            app:cornerRadius="20dp" />
                    </LinearLayout>

                    <!-- Active state (recording) -->
                    <LinearLayout
                        android:id="@+id/layoutRecordActive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <!-- Recording indicator row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <View
                                android:id="@+id/recordingDot"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:background="@drawable/circle_red" />

                            <TextView
                                android:id="@+id/tvRecordingTimer"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="Recording 0:00 / 5:00"
                                android:textColor="@color/dashboard_text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnRecordStop"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:text="Stop"
                                android:textColor="#F44336"
                                android:textSize="13sp"
                                app:strokeColor="#F44336"
                                app:cornerRadius="18dp" />
                        </LinearLayout>

                        <!-- Progress bar -->
                        <ProgressBar
                            android:id="@+id/progressRecording"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:max="100"
                            android:progress="0"
                            android:progressTint="#4CAF50"
                            android:progressBackgroundTint="@color/dashboard_card_stroke"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvSampleCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 samples"
                            android:textColor="@color/dashboard_text_secondary"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Scooter Details Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnScooterDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scooter Details"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                app:cornerRadius="12dp" />

            <!-- Disconnect Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDisconnect"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disconnect"
                android:textColor="@color/dashboard_text_secondary"
                app:strokeColor="@color/dashboard_card_stroke"
                app:cornerRadius="12dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
