<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pure eScooter Admin Dashboard</title>
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>
    <!-- Login Screen -->
    <div id="login-screen" class="login-container">
        <div class="login-card">
            <div class="login-logo">
                <h1>Pure eScooter Admin</h1>
                <p>Scooter Management Dashboard</p>
            </div>
            <form id="login-form">
                <div class="form-group">
                    <label for="login-email">Email</label>
                    <input type="email" id="login-email" required autocomplete="email" placeholder="admin@pure.com">
                </div>
                <div class="form-group">
                    <label for="login-password">Password</label>
                    <input type="password" id="login-password" required autocomplete="current-password" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary btn-full" id="login-btn">Sign In</button>
                <div id="login-error" class="error-msg hidden"></div>
            </form>
        </div>
    </div>

    <!-- Main App -->
    <div id="app" class="hidden">
        <!-- Sidebar -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h2>Pure eScooter Admin</h2>
                <span id="admin-email" class="admin-email"></span>
            </div>
            <ul class="nav-items">
                <li class="nav-item active" data-page="dashboard">
                    <span class="nav-icon">&#9632;</span> Dashboard
                </li>
                <li class="nav-item" data-page="users">
                    <span class="nav-icon">&#9787;</span> Users
                </li>
                <li class="nav-item" data-page="scooters">
                    <span class="nav-icon">&#9881;</span> Scooters
                </li>
                <li class="nav-item" data-page="distributors">
                    <span class="nav-icon">&#9733;</span> Distributors
                </li>
                <li class="nav-item" data-page="workshops">
                    <span class="nav-icon">&#9874;</span> Workshops
                </li>
                <li class="nav-item" data-page="service-jobs">
                    <span class="nav-icon">&#9998;</span> Service Jobs
                </li>
                <li class="nav-item" data-page="firmware">
                    <span class="nav-icon">&#8679;</span> Firmware
                </li>
                <li class="nav-item" data-page="telemetry">
                    <span class="nav-icon">&#9881;</span> Telemetry
                </li>
                <li class="nav-item" data-page="logs">
                    <span class="nav-icon">&#9776;</span> Upload Logs
                </li>
                <li class="nav-item" data-page="events">
                    <span class="nav-icon">&#9889;</span> Events
                </li>
                <li class="nav-item" data-page="validation">
                    <span class="nav-icon">&#10003;</span> Validation
                </li>
            </ul>
            <div class="sidebar-footer">
                <button class="btn btn-sm btn-outline" id="logout-btn">Sign Out</button>
            </div>
        </nav>

        <!-- Main Content -->
        <main id="main-content">
            <div id="page-content">
                <!-- Pages rendered here by JS -->
            </div>
        </main>
    </div>

    <!-- Detail Modal -->
    <div id="detail-modal" class="modal hidden">
        <div class="modal-overlay"></div>
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="modal-title">Details</h3>
                <button class="modal-close" id="modal-close">&times;</button>
            </div>
            <div id="modal-body" class="modal-body"></div>
            <div class="modal-footer">
                <button class="btn btn-sm btn-outline" id="modal-close-btn">Close</button>
            </div>
        </div>
    </div>

    <!-- Toast Container -->
    <div id="toast-container"></div>

    <script src="js/api.js"></script>
    <script src="js/app.js"></script>
</body>
</html>
